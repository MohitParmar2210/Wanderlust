<% layout("layout/boilerplate") %>
<div class="container mt-4">
  <h3>Search Results for "<%= location %>"</h3>
  <% if (listings.length === 0) { %>
    <div class="alert alert-warning mt-4">No listings found for this location.</div>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% listings.forEach(listing => { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
            <% if (listing.booked) { %>
              <span class="badge bg-danger" style="position: absolute; left: 1rem; top: 18rem; font-size: 1rem;">Booked</span>
            <% } else { %>
              <span class="badge bg-success" style="position: absolute; left: 1rem; top: 18rem; font-size: 1rem;">Available</span>
            <% } %>
            <div class="card-body">
              <b><%= listing.title %></b>
              <br><span>&#8377 <%= listing.price.toLocaleString("en-IN") %>/night</span>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  <% } %>
</div> 